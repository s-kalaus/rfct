{
  "name": "rasa-coding-test",
  "version": "0.1.1",
  "private": true,
  "dependencies": {
    "csstype": "^3.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --coverage",
    "eject": "react-scripts eject",
    "format:write": "prettier --write ."
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@craco/craco": "^6.1.2",
    "@testing-library/dom": "^7.31.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.9",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.3",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.5",
    "prettier": "^2.3.0",
    "react-scripts": "^4.0.3"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)+(test).[jt]s?(x)"
    ],
    "collectCoverageFrom": [
      "src/components/EntityHighlighter/**/*.[jt]s?(x)"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "^~/(.*)": "<rootDir>/src/$1"
    }
  }
}
